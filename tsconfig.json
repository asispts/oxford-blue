{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noEmit": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}
